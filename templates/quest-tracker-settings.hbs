<form class="{{cssClass}}" autocomplete="off">
    <h2>{{localize "PQT.Settings.Title"}}</h2>
    <p class="notes">{{localize "PQT.Settings.Description"}}</p>

    <div class="form-group">
        <label>{{localize "PQT.Settings.ExportLabel"}}</label>
        <div class="form-fields">
            <button type="button" data-action="export"><i class="fas fa-file-export"></i> {{localize "PQT.Settings.ExportButton"}}</button>
        </div>
        <p class="notes">{{localize "PQT.Settings.ExportHint"}}</p>
    </div>

    <div class="form-group">
        <label>{{localize "PQT.Settings.ImportLabel"}}</label>
        <div class="form-fields">
            <button type="button" data-action="import"><i class="fas fa-file-import"></i> {{localize "PQT.Settings.ImportButton"}}</button>
        </div>
        <p class="notes">{{localize "PQT.Settings.ImportHint"}}</p>
    </div>
</form>
